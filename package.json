{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "hardhat": "^2.17.0"
  },
  "scripts": {
    "test": "npx hardhat test --typecheck",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "force-compile": "npx hardhat compile --force",

    "deploy-local": "npx hardhat run scripts/deployment.ts",
    "deploy-ganache": "npx hardhat run scripts/deployment.ts --network ganache",
    "deploy": "npx hardhat run scripts/deployment.ts --network bsc",
    "deploy-test": "npx hardhat run scripts/deployment.ts --network bscTestnet"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3"
  }
}
